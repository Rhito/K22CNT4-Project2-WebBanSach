@model K22CNT4_TTCD1_DinhTienLuc.Models.Order

@using (Html.BeginForm("CheckOut", "Cart", FormMethod.Post, new { @id = "checkOutForm" }))
{
    <h3>Thông tin đặt hàng</h3>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Họ tên khách hàng</label>
        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autocomplete = "off" })
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @pattern = "[0-9]+", @autocomplete = "off" })
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autocomplete = "off" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off", @type = "email" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success form-control">Đặt hàng</button>
    </div>
}
