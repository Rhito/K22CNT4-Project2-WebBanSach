@model K22CNT4_TTCD1_DinhTienLuc.Models.Order

@{
    ViewBag.Title = "add new order";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Danhmuc" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Danhmuc">Danh mục</a></li>
                    <li class="breadcrumb-item active">Thêm mới </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới</h3>
        </div>
        <div class="card-body">

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Order", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Họ tên khách hàng</label>
                        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @pattern = "[0-9]+", @autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off", @type = "email" })
                    </div>
                    <div class="form-group">
                        <a class="btn btn-danger" href="/Admin/Order">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                }
            </div>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
